{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Carrot",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#types"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator",
          "match": "(<|>)"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type",
          "match": "\\b(int|float|string)\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable",
          "match": "[a-zA-Z]"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.carrot",
          "match": "\\b(if|while|for|return|function)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.carrot",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.carrot",
          "match": "\\\\."
        }
      ]
    }
  },
  "scopeName": "source.carrot"
}
